<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WorkoutNHLStenden" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="toolbarStyle">@style/Widget.App.Toolbar</item>
        <item name="colorControlHighlight">@color/transparent</item>
        <item name="android:colorControlHighlight">@color/transparent</item>
        <item name="colorControlActivated">@color/transparent</item>
        <item name="android:colorEdgeEffect">@color/transparent</item>
        <item name="android:selectableItemBackground">@drawable/transparent_state</item>
        <item name="android:selectableItemBackgroundBorderless">@drawable/transparent_state</item>
        <item name="selectableItemBackground">@drawable/transparent_state</item>
        <item name="selectableItemBackgroundBorderless">@drawable/transparent_state</item>
    </style>

    <style name="Theme.WorkoutNHLStenden" parent="Base.Theme.WorkoutNHLStenden" />

    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/TextAppearance.App.TitleBold</item>
    </style>

    <style name="TextAppearance.App.TitleBold" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Bottom Navigation Style -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconSize">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="itemPaddingTop">20dp</item>
        <item name="itemPaddingBottom">0dp</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationTextStyle.Active</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationTextStyle.Inactive</item>
        <item name="itemRippleColor">@color/transparent</item>
        <item name="itemBackground">@drawable/transparent_state</item>
        <item name="itemActiveIndicatorStyle">@null</item>
        <item name="itemTextColor">@drawable/nav_item_color_state</item>
    </style>
    
    <!-- Base Bottom Navigation Text Style -->
    <style name="BottomNavigationTextStyle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">11sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingBottom">0dp</item>
    </style>
    
    <!-- Active Bottom Navigation Text Style -->
    <style name="BottomNavigationTextStyle.Active">
        <item name="android:textColor">@color/white</item>
    </style>
    
    <!-- Inactive Bottom Navigation Text Style -->
    <style name="BottomNavigationTextStyle.Inactive">
        <item name="android:textColor">@color/nav_item_inactive</item>
    </style>
</resources>